{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": ["ts-jest", { "tsconfig": { "module": "commonjs", "resolvePackageJsonExports": false } }]
  },
  "moduleNameMapper": { "@/(.*)": "<rootDir>/../../src/$1" },
  "setupFilesAfterEnv": ["<rootDir>/testcontainers.ts"],
  "testTimeout": 60000
}
